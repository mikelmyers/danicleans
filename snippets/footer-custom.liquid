<style>
.dc-footer { background: #1a3a2a; color: #c8d9c8; font-size: 14px; }
.dc-footer a { color: #c8d9c8; text-decoration: none; transition: color 0.2s; }
.dc-footer a:hover { color: #fff; }
.dc-footer-inner { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
.dc-footer-main { padding: 56px 0 40px; }
.dc-footer-main .dc-footer-inner {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr 1fr;
  gap: 40px;
}
.dc-footer-logo {
  font-size: 24px; font-weight: 800; color: #fff;
  margin-bottom: 12px;
}
.dc-footer-brand p {
  line-height: 1.6; margin-bottom: 16px; font-size: 14px;
}
.dc-footer-contact { display: flex; flex-direction: column; gap: 8px; margin-bottom: 16px; }
.dc-footer-phone, .dc-footer-email {
  display: inline-flex; align-items: center; gap: 8px;
  color: #fff; font-weight: 600;
}
.dc-footer-social { display: flex; gap: 12px; }
.dc-footer-social a {
  width: 36px; height: 36px; border-radius: 50%;
  background: rgba(255,255,255,0.1); display: flex;
  align-items: center; justify-content: center;
  transition: background 0.2s;
}
.dc-footer-social a:hover { background: #2d6a4f; }
.dc-footer-col h4 {
  color: #fff; font-size: 16px; font-weight: 700;
  margin-bottom: 16px; text-transform: uppercase;
  letter-spacing: 0.5px;
}
.dc-footer-col ul { list-style: none; padding: 0; margin: 0; }
.dc-footer-col li { margin-bottom: 10px; }
.dc-footer-col li a { font-size: 14px; }
.dc-footer-trust {
  border-top: 1px solid rgba(255,255,255,0.1);
  border-bottom: 1px solid rgba(255,255,255,0.1);
  padding: 16px 0;
}
.dc-footer-trust-items {
  display: flex; justify-content: center; flex-wrap: wrap; gap: 24px;
  font-size: 13px; color: #8aab8a; font-weight: 600;
  text-transform: uppercase; letter-spacing: 0.5px;
}
.dc-footer-trust-items span::before {
  content: "\2713 "; color: #2d6a4f;
}
.dc-footer-bottom { padding: 20px 0; }
.dc-footer-bottom .dc-footer-inner {
  display: flex; justify-content: space-between; align-items: center;
  flex-wrap: wrap; gap: 12px;
}
.dc-footer-bottom p { margin: 0; font-size: 13px; color: #6a8a6a; }
.dc-footer-bottom-links { display: flex; gap: 16px; }
.dc-footer-bottom-links a { font-size: 13px; color: #6a8a6a; }
.dc-footer-bottom-links a:hover { color: #c8d9c8; }

@media (max-width: 768px) {
  .dc-footer-main .dc-footer-inner {
    grid-template-columns: 1fr 1fr;
    gap: 32px;
  }
  .dc-footer-brand { grid-column: 1 / -1; }
  .dc-footer-trust-items { gap: 12px; font-size: 11px; }
  .dc-footer-bottom .dc-footer-inner {
    flex-direction: column; text-align: center;
  }
}
@media (max-width: 480px) {
  .dc-footer-main .dc-footer-inner {
    grid-template-columns: 1fr;
  }
}
</style>
