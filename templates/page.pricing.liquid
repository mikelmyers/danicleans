<script>
(function() {
  var tabs = document.querySelectorAll('.pricing-tab');
  tabs.forEach(function(tab) {
    tab.addEventListener('click', function() {
      tabs.forEach(function(t) { t.classList.remove('active'); });
      tab.classList.add('active');
      var target = tab.getAttribute('data-tab');
      document.querySelectorAll('.pricing-plans').forEach(function(p) { p.style.display = 'none'; });
      var panel = document.getElementById('plans-' + target);
      if (panel) panel.style.display = 'block';
    });
  });

  // Pre-select plan from URL params (e.g., from calculator or chatbot)
  var params = new URLSearchParams(window.location.search);
  var planParam = params.get('tab');
  if (planParam) {
    var targetTab = document.querySelector('.pricing-tab[data-tab="' + planParam + '"]');
    if (targetTab) targetTab.click();
  }
})();
</script>
