<style>
.faq-page { color: #1a3a2a; }
.faq-page-container { max-width: 1100px; margin: 0 auto; padding: 0 20px; }

/* Hero */
.faq-hero {
  background: linear-gradient(135deg, #1a3a2a 0%, #2d6a4f 100%);
  color: #fff; padding: 64px 20px; text-align: center;
}
.faq-hero h1 { font-size: 40px; margin-bottom: 12px; }
.faq-hero p { font-size: 18px; opacity: 0.9; max-width: 560px; margin: 0 auto; }
.faq-hero a { color: #b7e4c7; text-decoration: underline; }

/* Main FAQ section override */
.faq-main { padding: 48px 0 0; }
.faq-main .smart-faq-section { padding-top: 0 !important; }

/* Category Cards */
.faq-categories { padding: 56px 0; }
.faq-categories h2 { text-align: center; font-size: 28px; margin-bottom: 32px; color: #1a3a2a; }
.faq-cat-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 24px; }
.faq-cat-card {
  background: #f7faf7; border-radius: 12px; padding: 28px;
  border: 1px solid #e0e8e0;
}
.faq-cat-card h3 {
  font-size: 20px; color: #1a3a2a; margin-bottom: 16px;
  padding-bottom: 12px; border-bottom: 2px solid #2d6a4f;
}
.faq-cat-list details {
  border-bottom: 1px solid #e0e8e0; padding: 0;
}
.faq-cat-list details:last-child { border-bottom: none; }
.faq-cat-list summary {
  padding: 14px 0; cursor: pointer; font-weight: 600;
  font-size: 15px; color: #1a3a2a; list-style: none;
  display: flex; justify-content: space-between; align-items: center;
}
.faq-cat-list summary::-webkit-details-marker { display: none; }
.faq-cat-list summary::after {
  content: '+'; font-size: 20px; font-weight: 400; color: #2d6a4f;
  transition: transform 0.2s;
}
.faq-cat-list details[open] summary::after {
  content: '−';
}
.faq-cat-list summary:hover { color: #2d6a4f; }
.faq-cat-list details p {
  padding: 0 0 14px; margin: 0; font-size: 14px;
  color: #555; line-height: 1.6;
}

/* CTA */
.faq-cta {
  padding: 56px 20px; background: #1a3a2a; color: #fff; text-align: center;
}
.faq-cta h2 { font-size: 28px; margin-bottom: 8px; }
.faq-cta p { opacity: 0.9; margin-bottom: 24px; }
.faq-cta-buttons { display: flex; gap: 16px; justify-content: center; flex-wrap: wrap; }
.faq-cta-primary {
  display: inline-block; padding: 16px 32px; background: #fff; color: #2d6a4f;
  border-radius: 8px; font-size: 16px; font-weight: 700; text-decoration: none;
  transition: transform 0.2s;
}
.faq-cta-primary:hover { transform: translateY(-2px); }
.faq-cta-secondary {
  display: inline-block; padding: 16px 32px; background: transparent;
  color: #fff; border: 2px solid rgba(255,255,255,0.5); border-radius: 8px;
  font-size: 16px; font-weight: 700; text-decoration: none;
  transition: border-color 0.2s;
}
.faq-cta-secondary:hover { border-color: #fff; }

@media (max-width: 768px) {
  .faq-hero h1 { font-size: 28px; }
  .faq-hero { padding: 48px 20px; }
  .faq-cat-grid { grid-template-columns: 1fr; }
  .faq-cta-buttons { flex-direction: column; align-items: center; }
}
</style>
