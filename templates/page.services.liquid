<script>
(function() {
  var tabs = document.querySelectorAll('.svc-tab');
  tabs.forEach(function(tab) {
    tab.addEventListener('click', function() {
      tabs.forEach(function(t) { t.classList.remove('active'); });
      tab.classList.add('active');
      document.querySelectorAll('.svc-panel').forEach(function(p) { p.style.display = 'none'; });
      var panel = document.getElementById('panel-' + tab.getAttribute('data-tab'));
      if (panel) panel.style.display = 'block';
    });
  });

  // URL param support
  var params = new URLSearchParams(window.location.search);
  var tabParam = params.get('tab');
  if (tabParam) {
    var t = document.querySelector('.svc-tab[data-tab="' + tabParam + '"]');
    if (t) t.click();
  }
})();
</script>
