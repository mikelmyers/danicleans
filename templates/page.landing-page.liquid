{% assign form_submission_successful = false %}

{% if request.query.success == 'true' and request.query.form_type == 'contact' %}
    {% assign form_submission_successful = true %}
{% endif %}

{% comment %}
Quote Request Landing Page — Dani Cleans (Cleaning & Landscaping)
{% endcomment %}

<!-- Two-Column Container -->
<div class="two-column-container">
    <!-- Left Column: Form Container -->
    <div class="left-column">
        <div class="form-container">
            <h2>Get Your FREE Estimate</h2>
            <p>Tell us about your property and we'll get back to you within 24 hours.</p>

            {% if form_submission_successful %}
                <div class="success-message">
                    <p><strong>Thank you!</strong> We've received your request and will be in touch within 24 hours. If you need immediate help, call us at <a href="tel:4343510335">434-351-0335</a>.</p>
                </div>
            {% else %}
                <form method="post" action="/contact" id="ContactForm" accept-charset="UTF-8" class="contact-form">
                    <input type="hidden" name="form_type" value="contact">
                    <input type="hidden" name="utf8" value="✓">
                    <input type="hidden" name="return_to" value="{{ page.url }}?form_type=contact&success=true">

                    <div class="form-row">
                        <div class="form-group">
                            <label for="ContactFormName">Full Name *</label>
                            <input type="text" id="ContactFormName" name="contact[name]" required placeholder="Your full name">
                        </div>
                        <div class="form-group">
                            <label for="ContactFormEmail">Email *</label>
                            <input type="email" id="ContactFormEmail" name="contact[email]" required placeholder="your@email.com">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="ContactFormPhone">Phone Number *</label>
                            <input type="tel" id="ContactFormPhone" name="contact[Phone Number]" required placeholder="(434) 555-1234">
                        </div>
                        <div class="form-group">
                            <label for="ContactFormAddress">Property Address *</label>
                            <input type="text" id="ContactFormAddress" name="contact[Property Address]" required placeholder="123 Main St">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="ContactFormCity">City *</label>
                            <input type="text" id="ContactFormCity" name="contact[City]" required placeholder="Charlottesville">
                        </div>
                        <div class="form-group">
                            <label for="ContactFormZip">Zip Code *</label>
                            <input type="text" id="ContactFormZip" name="contact[Zip Code]" required placeholder="22901">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ContactFormCategory">Service Category *</label>
                        <select id="ContactFormCategory" name="contact[Service Category]" required>
                            <option value="">What do you need help with?</option>
                            <optgroup label="Cleaning Services">
                                <option value="Recurring Cleaning">Recurring Cleaning (Weekly/Bi-weekly/Monthly)</option>
                                <option value="Deep Cleaning">Deep Cleaning</option>
                                <option value="Move-In/Move-Out Cleaning">Move-In / Move-Out Cleaning</option>
                                <option value="Post-Construction Cleaning">Post-Construction Cleaning</option>
                                <option value="Window Cleaning">Window Cleaning</option>
                            </optgroup>
                            <optgroup label="Landscaping & Lawn Care">
                                <option value="Lawn Mowing & Maintenance">Lawn Mowing & Maintenance</option>
                                <option value="Landscaping & Garden Design">Landscaping & Garden Design</option>
                                <option value="Seasonal Cleanup">Seasonal Cleanup (Spring/Fall)</option>
                                <option value="Commercial Grounds Maintenance">Commercial Grounds Maintenance</option>
                            </optgroup>
                            <optgroup label="Bundles">
                                <option value="Cleaning + Landscaping Bundle">Cleaning + Landscaping Bundle</option>
                            </optgroup>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="ContactFormMessage">Tell Us More (optional)</label>
                        <textarea id="ContactFormMessage" name="contact[body]" rows="4" placeholder="Property size, specific needs, preferred schedule, etc."></textarea>
                    </div>

                    <button type="submit" class="btn">Get My Free Estimate</button>
                </form>
            {% endif %}
        </div>
    </div>

    <!-- Right Column: Benefits -->
    <div class="right-column">
        <div class="bullet-points">
            <h2>Why Dani Cleans?</h2>
            <ul>
                <li><strong>Locally Owned in Charlottesville</strong> — We're your neighbors, not a franchise</li>
                <li><strong>Insured & Bonded</strong> — Your property is fully protected</li>
                <li><strong>One Company, Two Services</strong> — Cleaning + Landscaping under one roof</li>
                <li><strong>Background-Checked Teams</strong> — Every team member is vetted</li>
                <li><strong>Flexible Scheduling</strong> — Including weekends and evenings</li>
                <li><strong>Eco-Friendly Options</strong> — Safe for kids, pets, and your yard</li>
                <li><strong>Transparent Pricing</strong> — No hidden fees, no surprises</li>
                <li><strong>100% Satisfaction Guarantee</strong> — We make it right or it's on us</li>
            </ul>

            <div class="quote-cta-phone">
                <p>Prefer to talk? Call us directly:</p>
                <a href="tel:4343510335" class="phone-link">434-351-0335</a>
            </div>
        </div>
    </div>
</div>
