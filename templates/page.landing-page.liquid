<!-- At the very top of your template -->
{% assign form_submission_successful = false %}

{% if request.query.success == 'true' and request.query.form_type == 'contact' %}
    {% assign form_submission_successful = true %}
{% endif %}

{% comment %}
Custom Landing Page Template for Dani Cleans
{% endcomment %}

{% assign page_css = 'custom-styles.css' %}





<!-- Two-Column Container -->
<div class="two-column-container">
    <!-- Left Column: Form Container -->
    <div class="left-column">
        <div class="form-container">
            <h2>Request a Personalized Quote</h2>
            <p>Please fill out the form below, and we will get back to you promptly.</p>

            {% if form_submission_successful %}
                <!-- Success Message -->
                <div class="success-message">
                    <p>We have received your request and will be in touch shortly. Thank you!</p>
                </div>
            {% else %}
                <!-- Contact Form -->
                <form method="post" action="/contact" id="ContactForm" accept-charset="UTF-8" class="contact-form">
                    <!-- Required Hidden Inputs -->
                    <input type="hidden" name="form_type" value="contact">
                    <input type="hidden" name="utf8" value="âœ“">
                    <!-- Return to Landing Page with Success Parameters -->
                    <input type="hidden" name="return_to" value="{{ page.url }}?form_type=contact&success=true">

                    <!-- Form Fields in Two Columns -->
                    <div class="form-row">
                        <!-- Full Name -->
                        <div class="form-group">
                            <label for="ContactFormName">Full Name*</label>
                            <input type="text" id="ContactFormName" name="contact[name]" required placeholder="Your Full Name">
                        </div>
                        <!-- Email -->
                        <div class="form-group">
                            <label for="ContactFormEmail">Email*</label>
                            <input type="email" id="ContactFormEmail" name="contact[email]" required placeholder="Your Email">
                        </div>
                    </div>

                    <div class="form-row">
                        <!-- Phone Number -->
                        <div class="form-group">
                            <label for="ContactFormPhone">Phone Number*</label>
                            <input type="tel" id="ContactFormPhone" name="contact[Phone Number]" required placeholder="Your Phone Number">
                        </div>
                        <!-- Property Address -->
                        <div class="form-group">
                            <label for="ContactFormAddress">Property Address*</label>
                            <input type="text" id="ContactFormAddress" name="contact[Property Address]" required placeholder="Street Address">
                        </div>
                    </div>

                    <div class="form-row">
                        <!-- City -->
                        <div class="form-group">
                            <label for="ContactFormCity">City*</label>
                            <input type="text" id="ContactFormCity" name="contact[City]" required placeholder="City">
                        </div>
                        <!-- Zip Code -->
                        <div class="form-group">
                            <label for="ContactFormZip">Zip Code*</label>
                            <input type="text" id="ContactFormZip" name="contact[Zip Code]" required placeholder="Zip Code">
                        </div>
                    </div>

                    <!-- Type of Service (Full Width) -->
                    <div class="form-group">
                        <label for="ContactFormService">Type of Service*</label>
                        <select id="ContactFormService" name="contact[Type of Service]" required>
                            <option value="">Select a Service</option>
                            <option value="Essential">Essential</option>
                            <option value="Standard">Standard</option>
                            <option value="Premium">Premium</option>
                            <option value="Move-In/Move-Out">Move-In/Move-Out</option>
                            <option value="Deep Cleaning">Deep Cleaning</option>
                        </select>
                    </div>

                    <!-- Additional Details (Full Width) -->
                    <div class="form-group">
                        <label for="ContactFormMessage">Additional Details</label>
                        <textarea id="ContactFormMessage" name="contact[body]" rows="5" placeholder="Please provide any additional information..."></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn">Submit Request</button>
                </form>
            {% endif %}
        </div>
    </div>

    <!-- Right Column: Bullet Points -->
    <div class="right-column">
        <div class="bullet-points">
            <h2>Why Choose Dani Cleans?</h2>
            <ul>
                <li><strong>Unparalleled Attention to Detail</strong></li>
                <li><strong>Customized Luxury Cleaning Plans</strong></li>
                <li><strong>Exclusive Use of Premium Eco-Friendly Products, Upon Request</strong></li>
                <li><strong>Discreet and Professional Service</strong></li>
                <li><strong>Trusted Expertise in Luxury Cleaning</strong></li>
                <li><strong>Commitment to Excellence</strong></li>
                <li><strong>Time-Saving Convenience</strong></li>
                <li><strong>Impeccable Reputation</strong></li>
                <li><strong>100% Satisfaction Guarantee</strong></li>
            </ul>
        </div>
    </div>
</div>







