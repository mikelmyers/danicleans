{% comment %}
  Instant Quote Calculator Section
  Gives customers an immediate price estimate ‚Äî reduces back-and-forth,
  qualifies leads automatically, and captures contact info.
{% endcomment %}

<div id="quote-calculator" class="quote-calc-section" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="quote-calc-container">
    <h2 class="quote-calc-title">{{ section.settings.heading }}</h2>
    <p class="quote-calc-subtitle">{{ section.settings.subheading }}</p>

    <!-- Step Indicator -->
    <div class="calc-steps">
      <div class="calc-step active" data-step="1"><span>1</span> Service</div>
      <div class="calc-step" data-step="2"><span>2</span> Details</div>
      <div class="calc-step" data-step="3"><span>3</span> Estimate</div>
    </div>

    <!-- Step 1: Service Type -->
    <div class="calc-panel active" id="calc-step-1">
      <h3>What do you need help with?</h3>
      <div class="calc-service-grid">
        <button class="calc-service-card" data-service="recurring-cleaning" data-category="cleaning">
          <span class="calc-card-icon">üè†</span>
          <span class="calc-card-title">Recurring Cleaning</span>
          <span class="calc-card-desc">Weekly, bi-weekly, or monthly</span>
        </button>
        <button class="calc-service-card" data-service="deep-cleaning" data-category="cleaning">
          <span class="calc-card-icon">‚ú®</span>
          <span class="calc-card-title">Deep Cleaning</span>
          <span class="calc-card-desc">Top-to-bottom thorough clean</span>
        </button>
        <button class="calc-service-card" data-service="move-cleaning" data-category="cleaning">
          <span class="calc-card-icon">üì¶</span>
          <span class="calc-card-title">Move-In / Move-Out</span>
          <span class="calc-card-desc">Get your deposit back</span>
        </button>
        <button class="calc-service-card" data-service="lawn-mowing" data-category="landscaping">
          <span class="calc-card-icon">üåø</span>
          <span class="calc-card-title">Lawn Mowing</span>
          <span class="calc-card-desc">Regular mowing & edging</span>
        </button>
        <button class="calc-service-card" data-service="landscaping" data-category="landscaping">
          <span class="calc-card-icon">üå∫</span>
          <span class="calc-card-title">Landscaping</span>
          <span class="calc-card-desc">Garden design & maintenance</span>
        </button>
        <button class="calc-service-card" data-service="seasonal-cleanup" data-category="landscaping">
          <span class="calc-card-icon">üçÇ</span>
          <span class="calc-card-title">Seasonal Cleanup</span>
          <span class="calc-card-desc">Spring prep or fall cleanup</span>
        </button>
        <button class="calc-service-card" data-service="bundle" data-category="bundle">
          <span class="calc-card-icon">‚≠ê</span>
          <span class="calc-card-title">Cleaning + Landscaping</span>
          <span class="calc-card-desc">Bundle & save 10%</span>
        </button>
      </div>
    </div>

    <!-- Step 2: Property Details (dynamic based on service) -->
    <div class="calc-panel" id="calc-step-2">
      <h3>Tell us about your property</h3>

      <!-- Cleaning Details -->
      <div class="calc-details-group" id="cleaning-details" style="display:none;">
        <div class="calc-field">
          <label>Home Size</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="home-size" data-value="small" data-label="Under 1,000 sqft">Under 1,000 sqft</button>
            <button class="calc-option" data-field="home-size" data-value="medium" data-label="1,000‚Äì2,000 sqft">1,000‚Äì2,000 sqft</button>
            <button class="calc-option" data-field="home-size" data-value="large" data-label="2,000‚Äì3,500 sqft">2,000‚Äì3,500 sqft</button>
            <button class="calc-option" data-field="home-size" data-value="xlarge" data-label="3,500+ sqft">3,500+ sqft</button>
          </div>
        </div>
        <div class="calc-field">
          <label>Bedrooms</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="bedrooms" data-value="1">1</button>
            <button class="calc-option" data-field="bedrooms" data-value="2">2</button>
            <button class="calc-option" data-field="bedrooms" data-value="3">3</button>
            <button class="calc-option" data-field="bedrooms" data-value="4">4+</button>
          </div>
        </div>
        <div class="calc-field">
          <label>Bathrooms</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="bathrooms" data-value="1">1</button>
            <button class="calc-option" data-field="bathrooms" data-value="2">2</button>
            <button class="calc-option" data-field="bathrooms" data-value="3">3</button>
            <button class="calc-option" data-field="bathrooms" data-value="4">4+</button>
          </div>
        </div>
        <div class="calc-field" id="frequency-field" style="display:none;">
          <label>How Often?</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="frequency" data-value="weekly" data-discount="20">Weekly (save 20%)</button>
            <button class="calc-option" data-field="frequency" data-value="biweekly" data-discount="10">Bi-weekly (save 10%)</button>
            <button class="calc-option" data-field="frequency" data-value="monthly" data-discount="0">Monthly</button>
          </div>
        </div>
        <div class="calc-field">
          <label>Add-Ons (optional)</label>
          <div class="calc-addon-row">
            <button class="calc-addon" data-addon="inside-fridge" data-price="35">Inside Fridge (+$35)</button>
            <button class="calc-addon" data-addon="inside-oven" data-price="35">Inside Oven (+$35)</button>
            <button class="calc-addon" data-addon="windows" data-price="50">Window Cleaning (+$50)</button>
            <button class="calc-addon" data-addon="laundry" data-price="25">Laundry (+$25)</button>
          </div>
        </div>
      </div>

      <!-- Landscaping Details -->
      <div class="calc-details-group" id="landscaping-details" style="display:none;">
        <div class="calc-field">
          <label>Yard Size</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="yard-size" data-value="small" data-label="Under ¬º acre">Under ¬º acre</button>
            <button class="calc-option" data-field="yard-size" data-value="medium" data-label="¬º ‚Äì ¬Ω acre">¬º ‚Äì ¬Ω acre</button>
            <button class="calc-option" data-field="yard-size" data-value="large" data-label="¬Ω ‚Äì 1 acre">¬Ω ‚Äì 1 acre</button>
            <button class="calc-option" data-field="yard-size" data-value="xlarge" data-label="1+ acre">1+ acre</button>
          </div>
        </div>
        <div class="calc-field" id="mowing-frequency-field" style="display:none;">
          <label>How Often?</label>
          <div class="calc-option-row">
            <button class="calc-option" data-field="mowing-frequency" data-value="weekly" data-discount="15">Weekly (save 15%)</button>
            <button class="calc-option" data-field="mowing-frequency" data-value="biweekly" data-discount="5">Bi-weekly (save 5%)</button>
            <button class="calc-option" data-field="mowing-frequency" data-value="onetime" data-discount="0">One-time</button>
          </div>
        </div>
        <div class="calc-field">
          <label>Extras (optional)</label>
          <div class="calc-addon-row">
            <button class="calc-addon" data-addon="hedge-trimming" data-price="60">Hedge Trimming (+$60)</button>
            <button class="calc-addon" data-addon="mulching" data-price="75">Mulching (+$75)</button>
            <button class="calc-addon" data-addon="leaf-removal" data-price="80">Leaf Removal (+$80)</button>
            <button class="calc-addon" data-addon="gutter-cleaning" data-price="65">Gutter Cleaning (+$65)</button>
          </div>
        </div>
      </div>

      <button class="calc-next-btn" id="calc-to-step-3" disabled>See My Estimate ‚Üí</button>
    </div>

    <!-- Step 3: Estimate + Lead Capture -->
    <div class="calc-panel" id="calc-step-3">
      <div class="calc-estimate-card">
        <h3>Your Estimated Price</h3>
        <div class="calc-price-display">
          <span class="calc-price-label">Starting at</span>
          <span class="calc-price-amount" id="calc-price">$0</span>
          <span class="calc-price-freq" id="calc-price-freq">per visit</span>
        </div>
        <div class="calc-estimate-breakdown" id="calc-breakdown"></div>
        <p class="calc-estimate-note">* Final price confirmed after a quick walkthrough. Most estimates are within 10% of this number.</p>
      </div>

      <div class="calc-lead-capture">
        <h3>Lock In This Price ‚Äî Get Your Exact Quote</h3>
        <p>We'll confirm your price within 24 hours. No spam, no obligation.</p>

        <form method="post" action="/contact" id="CalcLeadForm" accept-charset="UTF-8" class="calc-lead-form">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="‚úì">
          <input type="hidden" name="return_to" value="/pages/request-a-quote?form_type=contact&success=true">
          <input type="hidden" name="contact[Calculator Estimate]" id="calc-hidden-estimate" value="">
          <input type="hidden" name="contact[Service Requested]" id="calc-hidden-service" value="">
          <input type="hidden" name="contact[Property Details]" id="calc-hidden-details" value="">

          <div class="calc-form-row">
            <input type="text" name="contact[name]" placeholder="Your Name" required>
            <input type="tel" name="contact[Phone Number]" placeholder="Phone Number" required>
          </div>
          <div class="calc-form-row">
            <input type="email" name="contact[email]" placeholder="Email" required>
            <input type="text" name="contact[Property Address]" placeholder="Property Address" required>
          </div>

          <button type="submit" class="calc-submit-btn">Get My Exact Quote ‚Äî It's Free</button>
        </form>
      </div>
    </div>

    <button class="calc-back-btn" id="calc-back" style="display:none;">‚Üê Back</button>
  </div>
</div>

