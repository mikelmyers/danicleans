      bedroom: 15, bathroom: 20, discount: 10,
      hasFrequency: true, label: 'Cleaning + Landscaping Bundle'
    }
  };

  // Seasonal pricing multipliers
  var SEASONAL = (function() {
    var month = new Date().getMonth(); // 0-11
    // Spring (Mar-May): peak for cleaning + landscaping
    if (month >= 2 && month <= 4) return { multiplier: 1.0, label: 'Spring Special', icon: 'üå∏', msg: 'Spring is our busiest season ‚Äî book now to lock in your spot!' };
    // Summer (Jun-Aug): peak for lawn care
    if (month >= 5 && month <= 7) return { multiplier: 1.0, label: 'Summer', icon: '‚òÄÔ∏è', msg: 'Summer is prime lawn season ‚Äî weekly plans fill up fast!' };
    // Fall (Sep-Nov): seasonal cleanup demand
    if (month >= 8 && month <= 10) return { multiplier: 1.0, label: 'Fall Savings', icon: 'üçÇ', msg: 'Book fall cleanup now before the leaves pile up!' };
    // Winter (Dec-Feb): slower season = discount
    return { multiplier: 0.90, label: 'Winter Savings', icon: '‚ùÑÔ∏è', msg: 'Winter special ‚Äî save 10% on all cleaning services this month!' };
  })();

  // Loyalty detection
  var isReturning = false;
  try {
    var prevQuote = localStorage.getItem('danicleans_quote');
    if (prevQuote) {
      var parsed = JSON.parse(prevQuote);
      if (parsed.timestamp && Date.now() - parsed.timestamp < 90 * 24 * 60 * 60 * 1000) isReturning = true;
    }
  } catch(e) {}

  var state = {
    service: null, category: null,
    homeSize: null, yardSize: null,
    bedrooms: null, bathrooms: null,
    frequency: null, frequencyDiscount: 0,
    addons: {}, currentStep: 1,
    additionalSize: null, photoCount: 0
  };

  function $(id) { return document.getElementById(id); }
  function $$(sel, ctx) { return (ctx || document).querySelectorAll(sel); }

  function goToStep(step) {
    state.currentStep = step;
    $$('.calc-panel').forEach(function(p) { p.classList.remove('active'); });
    $('calc-step-' + step).classList.add('active');
    $$('.calc-step').forEach(function(s) {
      var n = parseInt(s.getAttribute('data-step'));
      s.classList.toggle('active', n === step);
      s.classList.toggle('completed', n < step);
    });
    $('calc-back').style.display = step > 1 ? 'block' : 'none';
    if (step === 3) {
      calculateEstimate();
      showSmartUpsell();
      showSeasonalNotice();
    }
  }

  // Step 1: Service selection
  $$('.calc-service-card').forEach(function(card) {
    card.addEventListener('click', function() {
      $$('.calc-service-card').forEach(function(c) { c.classList.remove('selected'); });
      card.classList.add('selected');
      state.service = card.getAttribute('data-service');
      state.category = card.getAttribute('data-category');
      state.addons = {};
      state.additionalSize = null;
      $$('.calc-addon').forEach(function(a) { a.classList.remove('selected'); });
      $$('#additional-details .calc-option').forEach(function(o) { o.classList.remove('selected'); });

      // Show step 2 with appropriate fields
      var isCleaning = state.category === 'cleaning' || state.category === 'bundle';
      var isLandscaping = state.category === 'landscaping' || state.category === 'bundle';
      var isAdditional = state.category === 'additional';
      $('cleaning-details').style.display = isCleaning ? 'block' : 'none';
      $('landscaping-details').style.display = isLandscaping ? 'block' : 'none';
      $('additional-details').style.display = isAdditional ? 'block' : 'none';

      // Show/hide specific additional service fields
      var addlFields = ['pw-scope-field', 'wc-scope-field', 'hl-scope-field', 'jr-scope-field'];
      addlFields.forEach(function(f) { if ($(f)) $(f).style.display = 'none'; });
      if (state.service === 'pressure-washing' && $('pw-scope-field')) $('pw-scope-field').style.display = 'block';
      if (state.service === 'window-cleaning' && $('wc-scope-field')) $('wc-scope-field').style.display = 'block';
      if (state.service === 'holiday-lights' && $('hl-scope-field')) $('hl-scope-field').style.display = 'block';
      if (state.service === 'junk-removal' && $('jr-scope-field')) $('jr-scope-field').style.display = 'block';

      var p = PRICING[state.service];
      if (p) {
        $('frequency-field').style.display = (p.hasFrequency && isCleaning) ? 'block' : 'none';
        $('mowing-frequency-field').style.display = (p.hasFrequency && isLandscaping) ? 'block' : 'none';
      }

      setTimeout(function() { goToStep(2); }, 300);
    });
  });

  // Step 2: Option buttons
  $$('.calc-option').forEach(function(btn) {
    btn.addEventListener('click', function() {
      var field = btn.getAttribute('data-field');
      btn.parentElement.querySelectorAll('.calc-option').forEach(function(b) { b.classList.remove('selected'); });
      btn.classList.add('selected');

      var val = btn.getAttribute('data-value');
      if (field === 'home-size') state.homeSize = val;
      else if (field === 'yard-size') state.yardSize = val;
      else if (field === 'bedrooms') state.bedrooms = parseInt(val) || 4;
      else if (field === 'bathrooms') state.bathrooms = parseInt(val) || 4;
      else if (field === 'frequency' || field === 'mowing-frequency') {
        state.frequency = val;
        state.frequencyDiscount = parseInt(btn.getAttribute('data-discount')) || 0;
      }
      else if (field === 'window-count' || field === 'light-scope' || field === 'junk-load') {
        state.additionalSize = val;
      }

      checkStep2Complete();
    });
  });

  // Add-ons (including pressure washing items)
  $$('.calc-addon').forEach(function(btn) {
    btn.addEventListener('click', function() {
      btn.classList.toggle('selected');
      var addon = btn.getAttribute('data-addon');
      var price = parseInt(btn.getAttribute('data-price')) || 0;
      if (btn.classList.contains('selected')) state.addons[addon] = price;
      else delete state.addons[addon];
      checkStep2Complete();
    });
  });

  function checkStep2Complete() {
    var ready = false;
    if (state.category === 'cleaning') {
      ready = state.homeSize && state.bedrooms && state.bathrooms;
    } else if (state.category === 'landscaping') {
      ready = !!state.yardSize;
    } else if (state.category === 'bundle') {
      ready = state.homeSize && state.bedrooms && state.bathrooms && state.yardSize;
    } else if (state.category === 'additional') {
      if (state.service === 'pressure-washing') {
        ready = Object.keys(state.addons).some(function(k) { return k.indexOf('pw-') === 0; });
      } else {
        ready = !!state.additionalSize;
      }
    }
    $('calc-to-step-3').disabled = !ready;
  }

  $('calc-to-step-3').addEventListener('click', function() {
    if (!this.disabled) goToStep(3);
  });

  $('calc-back').addEventListener('click', function() {
    goToStep(state.currentStep - 1);
  });

  // Photo upload
  var photoZone = $('calcPhotoZone');
  var photoInput = $('calcPhotoInput');
  var photoPreviews = $('calcPhotoPreviews');
  var uploadedPhotos = [];

  if (photoZone && photoInput) {
    photoZone.addEventListener('click', function() { photoInput.click(); });
    photoZone.addEventListener('dragover', function(e) { e.preventDefault(); photoZone.classList.add('dragover'); });
    photoZone.addEventListener('dragleave', function() { photoZone.classList.remove('dragover'); });
    photoZone.addEventListener('drop', function(e) {
      e.preventDefault(); photoZone.classList.remove('dragover');
      handlePhotos(e.dataTransfer.files);
    });
    photoInput.addEventListener('change', function() { handlePhotos(this.files); });
  }

  function handlePhotos(files) {
    var remaining = 5 - uploadedPhotos.length;
    for (var i = 0; i < Math.min(files.length, remaining); i++) {
      var file = files[i];
      if (!file.type.startsWith('image/')) continue;
      uploadedPhotos.push(file);
      var reader = new FileReader();
      reader.onload = (function(idx) {
        return function(e) {
          var item = document.createElement('div');
          item.className = 'calc-photo-item';
          item.innerHTML = '<img class="calc-photo-thumb" src="' + e.target.result + '" alt="Photo">' +
            '<button class="calc-photo-remove" data-idx="' + idx + '">&times;</button>';
          photoPreviews.appendChild(item);
          item.querySelector('.calc-photo-remove').addEventListener('click', function(ev) {
            ev.stopPropagation();
            uploadedPhotos.splice(parseInt(this.getAttribute('data-idx')), 1);
            renderPhotoPreviews();
          });
        };
      })(uploadedPhotos.length - 1);
      reader.readAsDataURL(file);
    }
    state.photoCount = uploadedPhotos.length;
  }

  function renderPhotoPreviews() {
    photoPreviews.innerHTML = '';
    uploadedPhotos.forEach(function(file, idx) {
      var reader = new FileReader();
      reader.onload = function(e) {
        var item = document.createElement('div');
        item.className = 'calc-photo-item';
        item.innerHTML = '<img class="calc-photo-thumb" src="' + e.target.result + '" alt="Photo">' +
          '<button class="calc-photo-remove" data-idx="' + idx + '">&times;</button>';
        photoPreviews.appendChild(item);
        item.querySelector('.calc-photo-remove').addEventListener('click', function(ev) {
          ev.stopPropagation();
          uploadedPhotos.splice(parseInt(this.getAttribute('data-idx')), 1);
          renderPhotoPreviews();
        });
      };
      reader.readAsDataURL(file);
    });
    state.photoCount = uploadedPhotos.length;
  }

  // Smart Upsell Engine
  function showSmartUpsell() {
    var upsell = $('calc-upsell');
    var upsellText = $('calc-upsell-text');
    var upsellBtn = $('calc-upsell-btn');
    if (!upsell) return;

    var suggestion = null;
    if (state.category === 'cleaning' && state.service !== 'bundle') {
      suggestion = {
        text: 'Add lawn care to your cleaning plan and <strong>save an extra 10%</strong> on both services. One company, one bill ‚Äî most customers save $30-60/visit.',
        action: function() {
          var bundleCard = document.querySelector('[data-service="bundle"]');
          if (bundleCard) bundleCard.click();
        },
        btnText: 'Add Lawn Care & Save 10%'
      };
    } else if (state.category === 'landscaping') {
      suggestion = {
        text: 'Bundle your lawn care with <strong>home cleaning and save 10%</strong> on both. Same team, same day ‚Äî your whole property handled.',
        action: function() {
          var bundleCard = document.querySelector('[data-service="bundle"]');
          if (bundleCard) bundleCard.click();
        },
        btnText: 'Add Cleaning & Save 10%'
      };
    } else if (state.service === 'deep-cleaning' || state.service === 'move-cleaning') {
      suggestion = {
        text: 'Switching to a <strong>recurring plan saves up to 20%</strong> per visit. Most deep clean customers save $50+ by going bi-weekly.',
        action: function() {
          var recurringCard = document.querySelector('[data-service="recurring-cleaning"]');
          if (recurringCard) recurringCard.click();
        },
        btnText: 'See Recurring Savings'
      };
    } else if (state.service === 'pressure-washing') {
      suggestion = {
        text: 'Add <strong>window cleaning</strong> while we\'re at your property and save 15% on the window service. Bundle exterior services for the best value.',
        action: function() {
          var wcCard = document.querySelector('[data-service="window-cleaning"]');
          if (wcCard) wcCard.click();
        },
        btnText: 'Add Window Cleaning'
      };
    }

    if (suggestion && state.category !== 'bundle') {
      upsellText.innerHTML = suggestion.text;
      upsellBtn.textContent = suggestion.btnText;
      upsellBtn.onclick = suggestion.action;
      upsell.style.display = 'block';
      $('calc-upsell-dismiss').onclick = function() { upsell.style.display = 'none'; };
    } else {
      upsell.style.display = 'none';
    }
  }

  // Seasonal Notice
  function showSeasonalNotice() {
    var el = $('calc-seasonal');
    if (!el) return;
    $('calc-seasonal-icon').textContent = SEASONAL.icon;
    $('calc-seasonal-text').textContent = SEASONAL.msg;
    el.style.display = 'flex';
    if ($('calc-hidden-seasonal')) {
      $('calc-hidden-seasonal').value = SEASONAL.label + (SEASONAL.multiplier < 1 ? ' (' + Math.round((1 - SEASONAL.multiplier) * 100) + '% off)' : '');
    }
  }

  function calculateEstimate() {
    var p = PRICING[state.service];
    if (!p) return;

    var total = 0;
    var lines = [];

    if (state.category === 'bundle') {
      var cleanBase = p.cleaning[state.homeSize] || 0;
      var bedroomCost = (state.bedrooms - 1) * p.bedroom;
      var bathroomCost = (state.bathrooms - 1) * p.bathroom;
      var cleanSubtotal = cleanBase + bedroomCost + bathroomCost;
      var lawnBase = p.landscaping[state.yardSize] || 0;
      var subtotal = cleanSubtotal + lawnBase;
      var bundleDiscount = Math.round(subtotal * p.discount / 100);
      total = subtotal - bundleDiscount;

      lines.push({ label: 'Cleaning (base)', amount: cleanBase });
      if (bedroomCost > 0) lines.push({ label: 'Bedrooms (' + state.bedrooms + ')', amount: bedroomCost });
      if (bathroomCost > 0) lines.push({ label: 'Bathrooms (' + state.bathrooms + ')', amount: bathroomCost });
      lines.push({ label: 'Lawn care (base)', amount: lawnBase });
      lines.push({ label: 'Bundle discount (-' + p.discount + '%)', amount: -bundleDiscount });
    } else if (state.category === 'cleaning') {
      var base = p.base[state.homeSize] || 0;
      var brCost = (state.bedrooms - 1) * (p.bedroom || 0);
      var baCost = (state.bathrooms - 1) * (p.bathroom || 0);
      total = base + brCost + baCost;
      lines.push({ label: p.label + ' (base)', amount: base });
      if (brCost > 0) lines.push({ label: 'Bedrooms (' + state.bedrooms + ')', amount: brCost });
      if (baCost > 0) lines.push({ label: 'Bathrooms (' + state.bathrooms + ')', amount: baCost });
    } else if (state.category === 'additional') {
      if (p.addonBased) {
        // Pressure washing ‚Äî price is sum of selected areas
        lines.push({ label: p.label, amount: 0 });
      } else {
        var sizeVal = state.additionalSize || 'medium';
        total = p.base[sizeVal] || 0;
        lines.push({ label: p.label, amount: total });
      }
    } else {
      total = p.base[state.yardSize] || 0;
      lines.push({ label: p.label + ' (base)', amount: total });
    }

    // Add-ons
    var addonTotal = 0;
    Object.keys(state.addons).forEach(function(key) {
      addonTotal += state.addons[key];
      var label = key.replace(/^pw-/, '').replace(/^wc-/, '').replace(/-/g, ' ').replace(/\b\w/g, function(c) { return c.toUpperCase(); });
      lines.push({ label: label, amount: state.addons[key] });
    });
    total += addonTotal;

    // Frequency discount
    if (state.frequencyDiscount > 0 && state.frequency) {
      var freqDisc = Math.round(total * state.frequencyDiscount / 100);
      lines.push({ label: state.frequency.charAt(0).toUpperCase() + state.frequency.slice(1) + ' discount (-' + state.frequencyDiscount + '%)', amount: -freqDisc });
      total -= freqDisc;
    }

    // Seasonal discount (winter)
    if (SEASONAL.multiplier < 1 && (state.category === 'cleaning' || state.category === 'bundle')) {
      var seasonalPct = Math.round((1 - SEASONAL.multiplier) * 100);
      var seasonalDisc = Math.round(total * (1 - SEASONAL.multiplier));
      lines.push({ label: SEASONAL.label + ' (-' + seasonalPct + '%)', amount: -seasonalDisc });
      total -= seasonalDisc;
    }

    // Loyalty discount for returning visitors
    if (isReturning && total > 100) {
      var loyaltyDisc = Math.round(total * 0.05);
      lines.push({ label: 'Welcome back discount (-5%)', amount: -loyaltyDisc });
      total -= loyaltyDisc;
    }

    lines.push({ label: 'Estimated Total', amount: total, isTotal: true });

    // Render
    $('calc-price').textContent = '$' + total;
    var freqText = 'per visit';
    if (state.frequency === 'weekly') freqText = 'per week';
    else if (state.frequency === 'biweekly') freqText = 'every 2 weeks';
    else if (state.frequency === 'monthly') freqText = 'per month';
    $('calc-price-freq').textContent = freqText;

    var breakdownHtml = '';
    lines.forEach(function(line) {
      var cls = line.isTotal ? ' total' : '';
      var sign = line.amount < 0 ? '-$' + Math.abs(line.amount) : '$' + line.amount;
      breakdownHtml += '<div class="breakdown-line' + cls + '"><span>' + line.label + '</span><span>' + sign + '</span></div>';
    });
    $('calc-breakdown').innerHTML = breakdownHtml;

    // Populate hidden fields for lead capture
    $('calc-hidden-estimate').value = '$' + total + ' ' + freqText;
    $('calc-hidden-service').value = p.label || state.service;
    var details = [];
    if (state.homeSize) details.push('Home: ' + state.homeSize);
    if (state.yardSize) details.push('Yard: ' + state.yardSize);
    if (state.additionalSize) details.push('Size: ' + state.additionalSize);
    if (state.bedrooms) details.push(state.bedrooms + ' bed');
    if (state.bathrooms) details.push(state.bathrooms + ' bath');
    if (state.frequency) details.push('Frequency: ' + state.frequency);
    if (Object.keys(state.addons).length > 0) details.push('Add-ons: ' + Object.keys(state.addons).join(', '));
    if (SEASONAL.multiplier < 1) details.push('Seasonal: ' + SEASONAL.label);
    if (isReturning) details.push('Returning customer');
    $('calc-hidden-details').value = details.join(' | ');
    if ($('calc-hidden-photos')) $('calc-hidden-photos').value = String(state.photoCount);

    // Persist quote to localStorage
    try {
      var quoteData = {
        estimate: '$' + total + ' ' + freqText,
        total: total,
        freqText: freqText,
        service: p.label || state.service,
        serviceKey: state.service,
        details: details.join(' | '),
        breakdown: lines.map(function(l) { return l.label + ': ' + (l.amount < 0 ? '-$' + Math.abs(l.amount) : '$' + l.amount); }).join(', '),
        timestamp: Date.now()
      };
      localStorage.setItem('danicleans_quote', JSON.stringify(quoteData));
    } catch(e) {}
  }
})();
