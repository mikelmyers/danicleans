{% comment %}
  Services Cards — Homepage
  Modern cards with SVG icons, hover effects, starting prices, and CTAs.
{% endcomment %}

<section class="services-home-section" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="services-home-inner">
    {% if section.settings.heading != blank %}
      <div class="services-home-header">
        <h2 class="services-home-title">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="services-home-subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="services-home-grid">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link | default: '#quote-calculator' }}" class="service-home-card" {{ block.shopify_attributes }}>
          <div class="service-home-icon">
            {% case block.settings.icon %}
              {% when 'calendar' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
              {% when 'sparkle' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2z"></path></svg>
              {% when 'truck' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
              {% when 'scissors' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 3v6m0 0v6m0-6h6m-6 0H6"></path><path d="M20 4L4 20"></path><path d="M4 4l16 16"></path></svg>
              {% when 'leaf' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66.95-2.3c.48.17.98.3 1.34.3C19 20 22 3 22 3c-1 2-8 2.25-13 3.25S2 11.5 2 13.5s1.75 3.75 1.75 3.75"></path></svg>
              {% when 'flower' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"></circle><path d="M12 2a4 4 0 0 1 4 4c0 1.5-.8 2.8-2 3.5"></path><path d="M12 2a4 4 0 0 0-4 4c0 1.5.8 2.8 2 3.5"></path><path d="M22 12a4 4 0 0 1-4 4c-1.5 0-2.8-.8-3.5-2"></path><path d="M22 12a4 4 0 0 0-4-4c-1.5 0-2.8.8-3.5 2"></path><path d="M12 22a4 4 0 0 1-4-4c0-1.5.8-2.8 2-3.5"></path><path d="M12 22a4 4 0 0 0 4-4c0-1.5-.8-2.8-2-3.5"></path><path d="M2 12a4 4 0 0 1 4-4c1.5 0 2.8.8 3.5 2"></path><path d="M2 12a4 4 0 0 0 4 4c1.5 0 2.8-.8 3.5-2"></path></svg>
              {% when 'wind' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9.59 4.59A2 2 0 1 1 11 8H2m10.59 11.41A2 2 0 1 0 14 16H2m15.73-8.27A2.5 2.5 0 1 1 19.5 12H2"></path></svg>
              {% when 'package' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path><polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline><line x1="12" y1="22.08" x2="12" y2="12"></line></svg>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="16"></line><line x1="8" y1="12" x2="16" y2="12"></line></svg>
            {% endcase %}
          </div>
          <h3 class="service-home-title">{{ block.settings.title }}</h3>
          <p class="service-home-desc">{{ block.settings.description }}</p>
          {% if block.settings.starting_price != blank %}
            <div class="service-home-price">From {{ block.settings.starting_price }}</div>
          {% endif %}
          <span class="service-home-link">
            {{ block.settings.link_text | default: 'Learn More' }}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
          </span>
        </a>
      {% endfor %}
    </div>

    {% if section.settings.cta_text != blank %}
      <div class="services-home-cta">
        <a href="{{ section.settings.cta_link }}" class="services-home-cta-btn">{{ section.settings.cta_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.services-home-section {
  background: #fff;
}
.services-home-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}
.services-home-header {
  text-align: center;
  margin-bottom: 40px;
}
.services-home-title {
  font-size: 32px;
  color: #1a3a2a;
  margin-bottom: 8px;
}
.services-home-subtitle {
  font-size: 16px;
  color: #555;
  max-width: 500px;
  margin: 0 auto;
}
.services-home-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}
.service-home-card {
  background: #fff;
  border: 2px solid #e8efe8;
  border-radius: 16px;
  padding: 32px 24px;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}
.service-home-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: #2d6a4f;
  transform: scaleX(0);
  transition: transform 0.3s ease;
}
.service-home-card:hover {
  border-color: #2d6a4f;
  transform: translateY(-4px);
  box-shadow: 0 12px 32px rgba(45, 106, 79, 0.12);
}
.service-home-card:hover::before {
  transform: scaleX(1);
}
.service-home-icon {
  width: 56px;
  height: 56px;
  background: #f0f7f0;
  border-radius: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #2d6a4f;
  margin-bottom: 16px;
  transition: all 0.3s ease;
}
.service-home-card:hover .service-home-icon {
  background: #2d6a4f;
  color: #fff;
}
.service-home-card h3 {
  font-size: 18px;
  color: #1a3a2a;
  margin-bottom: 8px;
  font-weight: 700;
}
.service-home-desc {
  font-size: 14px;
  color: #555;
  line-height: 1.6;
  margin-bottom: 12px;
  flex-grow: 1;
}
.service-home-price {
  font-size: 14px;
  font-weight: 700;
  color: #2d6a4f;
  margin-bottom: 12px;
  padding: 6px 12px;
  background: #f0f7f0;
  border-radius: 6px;
  display: inline-block;
  align-self: flex-start;
}
.service-home-link {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-size: 14px;
  font-weight: 600;
  color: #2d6a4f;
  margin-top: auto;
}
.service-home-link svg {
  transition: transform 0.2s;
}
.service-home-card:hover .service-home-link svg {
  transform: translateX(4px);
}
.services-home-cta {
  text-align: center;
  margin-top: 32px;
}
.services-home-cta-btn {
  display: inline-block;
  padding: 14px 32px;
  background: #2d6a4f;
  color: #fff;
  font-size: 16px;
  font-weight: 700;
  text-decoration: none;
  border-radius: 8px;
  transition: background 0.2s;
}
.services-home-cta-btn:hover {
  background: #245a42;
  color: #fff;
}
@media (max-width: 990px) {
  .services-home-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media (max-width: 600px) {
  .services-home-grid {
    grid-template-columns: 1fr;
  }
  .service-home-card {
    padding: 24px 20px;
  }
  .services-home-title {
    font-size: 26px;
  }
}
</style>

{% schema %}
{
  "name": "Services (Home)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Services"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Professional cleaning and landscaping for every need"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Get a Free Estimate"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 100, "step": 4, "unit": "px",
      "label": "Top padding", "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 100, "step": 4, "unit": "px",
      "label": "Bottom padding", "default": 52
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service Card",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "calendar", "label": "Calendar (Recurring)" },
            { "value": "sparkle", "label": "Sparkle (Deep Clean)" },
            { "value": "truck", "label": "Truck (Move)" },
            { "value": "leaf", "label": "Leaf (Lawn)" },
            { "value": "flower", "label": "Flower (Landscaping)" },
            { "value": "wind", "label": "Wind (Seasonal)" },
            { "value": "package", "label": "Package (Bundle)" }
          ],
          "default": "calendar"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Service Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Brief description of this service."
        },
        {
          "type": "text",
          "id": "starting_price",
          "label": "Starting Price",
          "info": "e.g. '$100/visit' — leave blank to hide",
          "default": "$100/visit"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services (Home)",
      "blocks": [
        { "type": "service", "settings": { "icon": "calendar", "title": "Recurring Cleaning", "description": "Weekly, bi-weekly, or monthly plans that keep your home consistently fresh.", "starting_price": "$100/visit", "link_text": "Learn More" }},
        { "type": "service", "settings": { "icon": "sparkle", "title": "Deep Cleaning", "description": "Top-to-bottom scrub for homes that need extra attention. Every corner, every surface.", "starting_price": "$180", "link_text": "Learn More" }},
        { "type": "service", "settings": { "icon": "truck", "title": "Move-In / Move-Out", "description": "Stress-free transitions for renters, homeowners, and property managers.", "starting_price": "$200", "link_text": "Learn More" }}
      ]
    }
  ]
}
{% endschema %}
