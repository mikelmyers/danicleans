{% comment %}
  Meet the Team / About Section
  People buy from people they trust. This humanizes the brand.
  Shows the face behind the business. Critical for local service conversions.
{% endcomment %}

<section class="team-section" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px; background: {{ section.settings.bg_color }};">
  <div class="team-inner">
    <div class="team-layout">
      {% if section.settings.owner_image != blank %}
        <div class="team-photo">
          {{ section.settings.owner_image | image_url: width: 500 | image_tag: loading: 'lazy', class: 'team-photo-img' }}
        </div>
      {% else %}
        <div class="team-photo team-photo-placeholder">
          <div class="team-photo-initials">DC</div>
        </div>
      {% endif %}

      <div class="team-content">
        <p class="team-tag">{{ section.settings.tag }}</p>
        <h2>{{ section.settings.heading }}</h2>
        <div class="team-story">{{ section.settings.story }}</div>

        <div class="team-values">
          {% for block in section.blocks %}
            <div class="team-value" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <span class="team-value-icon">{{ block.settings.icon }}</span>
              {% endif %}
              <div>
                <strong>{{ block.settings.title }}</strong>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="team-cta-row">
          <a href="{{ section.settings.cta_url }}" class="team-cta primary">{{ section.settings.cta_text }}</a>
          {% if section.settings.cta2_text != blank %}
            <a href="{{ section.settings.cta2_url }}" class="team-cta secondary">{{ section.settings.cta2_text }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.team-section { color: #1a3a2a; }
.team-inner { max-width: 1000px; margin: 0 auto; padding: 0 20px; }
.team-layout { display: grid; grid-template-columns: 1fr 1.5fr; gap: 40px; align-items: center; }
.team-photo-img { width: 100%; border-radius: 16px; display: block; }
.team-photo-placeholder {
  aspect-ratio: 3/4; background: linear-gradient(135deg, #2d6a4f, #1a3a2a);
  border-radius: 16px; display: flex; align-items: center; justify-content: center;
}
.team-photo-initials { font-size: 64px; font-weight: 800; color: rgba(255,255,255,0.3); }
.team-tag { text-transform: uppercase; font-size: 13px; letter-spacing: 1.5px; color: #2d6a4f; font-weight: 600; margin-bottom: 8px; }
.team-content h2 { font-size: 30px; margin-bottom: 16px; line-height: 1.2; }
.team-story { font-size: 15px; color: #555; line-height: 1.7; margin-bottom: 24px; }
.team-story p { margin-bottom: 12px; }
.team-values { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-bottom: 24px; }
.team-value { display: flex; align-items: flex-start; gap: 10px; padding: 12px; background: #f7faf7; border-radius: 8px; }
.team-value-icon { font-size: 20px; flex-shrink: 0; margin-top: 2px; }
.team-value strong { display: block; font-size: 14px; margin-bottom: 2px; }
.team-value p { font-size: 13px; color: #666; margin: 0; }
.team-cta-row { display: flex; gap: 12px; flex-wrap: wrap; }
.team-cta { padding: 12px 28px; border-radius: 8px; font-weight: 700; font-size: 15px; text-decoration: none; transition: all 0.2s; }
.team-cta.primary { background: #2d6a4f; color: #fff; }
.team-cta.primary:hover { background: #245a42; }
.team-cta.secondary { border: 2px solid #2d6a4f; color: #2d6a4f; }
@media (max-width: 768px) {
  .team-layout { grid-template-columns: 1fr; text-align: center; }
  .team-values { grid-template-columns: 1fr; }
  .team-cta-row { justify-content: center; }
  .team-photo-img { max-width: 300px; margin: 0 auto; }
  .team-photo-placeholder { max-width: 300px; margin: 0 auto; }
}
</style>

