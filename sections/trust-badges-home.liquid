  Compact, icon-driven trust signals that build credibility at a glance.
{% endcomment %}

<section class="trust-badges-home" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="trust-badges-inner">
    {% for block in section.blocks %}
      <div class="trust-badge-item" {{ block.shopify_attributes }}>
        <div class="trust-badge-icon">
          {% case block.settings.icon %}
            {% when 'map-pin' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            {% when 'shield' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><polyline points="9 12 11 14 15 10"></polyline></svg>
            {% when 'star' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
            {% when 'check-circle' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
            {% when 'home' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
            {% when 'clock' %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
            {% else %}
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
          {% endcase %}
        </div>
        <div class="trust-badge-text">
          <strong>{{ block.settings.title }}</strong>
          <span>{{ block.settings.subtitle }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
.trust-badges-home {
  background: #1a3a2a;
  color: #fff;
}
.trust-badges-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 0;
}
.trust-badge-item {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 20px 24px;
  border-right: 1px solid rgba(255,255,255,0.1);
}
.trust-badge-item:last-child {
  border-right: none;
}
.trust-badge-icon {
  flex-shrink: 0;
  width: 48px;
  height: 48px;
  background: rgba(255,255,255,0.1);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6fcf97;
}
.trust-badge-text {
  display: flex;
  flex-direction: column;
}
.trust-badge-text strong {
  font-size: 15px;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 2px;
}
.trust-badge-text span {
  font-size: 13px;
  color: rgba(255,255,255,0.65);
  line-height: 1.3;
}
@media (max-width: 990px) {
  .trust-badges-inner {
    grid-template-columns: repeat(2, 1fr);
  }
  .trust-badge-item:nth-child(2) {
    border-right: none;
  }
  .trust-badge-item {
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  .trust-badge-item:nth-last-child(-n+2) {
    border-bottom: none;
  }
}
@media (max-width: 480px) {
  .trust-badges-inner {
    grid-template-columns: 1fr;
  }
  .trust-badge-item {
    border-right: none;
    border-bottom: 1px solid rgba(255,255,255,0.1);
    padding: 16px 20px;
  }
  .trust-badge-item:last-child {
    border-bottom: none;
  }
}
</style>

{% schema %}
{
  "name": "Trust Badges (Home)",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 60, "step": 4, "unit": "px",
      "label": "Top padding", "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 60, "step": 4, "unit": "px",
      "label": "Bottom padding", "default": 0
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "map-pin", "label": "Map Pin (Local)" },
            { "value": "shield", "label": "Shield (Insured)" },
            { "value": "star", "label": "Star (Rating)" },
            { "value": "check-circle", "label": "Check Circle (Guarantee)" },
            { "value": "home", "label": "Home" },
            { "value": "clock", "label": "Clock (On Time)" }
          ],
          "default": "check-circle"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Trust Badge"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Supporting text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges (Home)",
      "blocks": [
        { "type": "badge", "settings": { "icon": "map-pin", "title": "Locally Owned", "subtitle": "Proudly serving Charlottesville since 2018" }},
        { "type": "badge", "settings": { "icon": "shield", "title": "Insured & Bonded", "subtitle": "Your property is fully protected" }},
        { "type": "badge", "settings": { "icon": "star", "title": "5-Star Rated", "subtitle": "500+ happy homeowners" }},
        { "type": "badge", "settings": { "icon": "check-circle", "title": "100% Satisfaction", "subtitle": "Not happy? We'll make it right" }}
      ]
    }
  ]
}
{% endschema %}
