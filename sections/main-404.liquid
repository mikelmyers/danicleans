<style>
.dc-404 {
  text-align: center;
  padding: 80px 20px;
  max-width: 640px;
  margin: 0 auto;
}
.dc-404-icon {
  margin-bottom: 24px;
  opacity: 0.7;
}
.dc-404-title {
  font-size: 36px;
  font-weight: 800;
  color: #1a3a2a;
  margin: 0 0 12px;
}
.dc-404-text {
  font-size: 17px;
  color: #666;
  line-height: 1.6;
  margin: 0 0 32px;
}
.dc-404-actions {
  display: flex;
  gap: 12px;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 48px;
}
.dc-404-btn {
  display: inline-block;
  padding: 14px 28px;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 700;
  text-decoration: none;
  transition: all 0.2s;
}
.dc-404-btn--primary {
  background: #2d6a4f;
  color: #fff;
}
.dc-404-btn--primary:hover {
  background: #1a3a2a;
  color: #fff;
}
.dc-404-btn--secondary {
  background: #f0f7f0;
  color: #2d6a4f;
  border: 2px solid #2d6a4f;
}
.dc-404-btn--secondary:hover {
  background: #2d6a4f;
  color: #fff;
}
.dc-404-links {
  border-top: 1px solid #e5e5e5;
  padding-top: 32px;
}
.dc-404-links-title {
  font-size: 18px;
  font-weight: 700;
  color: #1a3a2a;
  margin: 0 0 20px;
}
.dc-404-links-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}
.dc-404-link {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 14px 16px;
  background: #f8faf8;
  border-radius: 8px;
  color: #1a3a2a;
  text-decoration: none;
  font-weight: 600;
  font-size: 15px;
  transition: all 0.2s;
}
.dc-404-link:hover {
  background: #e8f0e8;
  color: #2d6a4f;
}
.dc-404-link-icon {
  display: flex;
  align-items: center;
  color: #2d6a4f;
}
@media (max-width: 480px) {
  .dc-404 { padding: 48px 20px; }
  .dc-404-title { font-size: 28px; }
  .dc-404-links-grid { grid-template-columns: 1fr; }
  .dc-404-actions { flex-direction: column; }
  .dc-404-btn { width: 100%; text-align: center; }
}
</style>

