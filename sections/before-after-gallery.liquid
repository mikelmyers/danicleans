{% comment %}
  Before/After Image Slider Section
  Interactive slider that shows transformation photos.
  Powerful visual social proof for cleaning & landscaping.
{% endcomment %}

<section class="ba-section" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;">
  <div class="ba-container">
    <h2 class="ba-title">{{ section.settings.heading }}</h2>
    <p class="ba-subtitle">{{ section.settings.subheading }}</p>

    <div class="ba-gallery">
      {% for block in section.blocks %}
        <div class="ba-item" {{ block.shopify_attributes }}>
          <div class="ba-slider" data-ba-slider>
            <div class="ba-image ba-after">
              {% if block.settings.after_image != blank %}
                {{ block.settings.after_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.label | append: ' after' }}
              {% else %}
                <div class="ba-placeholder">After Photo</div>
              {% endif %}
            </div>
            <div class="ba-image ba-before" style="width: 50%;">
              {% if block.settings.before_image != blank %}
                {{ block.settings.before_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.label | append: ' before' }}
              {% else %}
                <div class="ba-placeholder">Before Photo</div>
              {% endif %}
            </div>
            <div class="ba-handle" style="left: 50%;">
              <div class="ba-handle-line"></div>
              <div class="ba-handle-circle">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="9 18 15 12 9 6"></polyline></svg>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" style="transform:rotate(180deg)"><polyline points="9 18 15 12 9 6"></polyline></svg>
              </div>
              <div class="ba-handle-line"></div>
            </div>
            <span class="ba-label ba-label-before">Before</span>
            <span class="ba-label ba-label-after">After</span>
          </div>
          {% if block.settings.label != blank %}
            <p class="ba-caption">{{ block.settings.label }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_cta %}
      <div class="ba-cta">
        <a href="/pages/request-a-quote" class="ba-cta-btn">Get Results Like These — Free Estimate</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.ba-section { background: #fff; }
.ba-container { max-width: 1000px; margin: 0 auto; padding: 0 20px; }
.ba-title { text-align: center; font-size: 32px; color: #1a3a2a; margin-bottom: 8px; }
.ba-subtitle { text-align: center; color: #555; font-size: 16px; margin-bottom: 36px; }
.ba-gallery {
  display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 24px;
}
.ba-item { border-radius: 12px; overflow: hidden; border: 1px solid #e0e8e0; }
.ba-slider {
  position: relative; overflow: hidden; cursor: col-resize;
  aspect-ratio: 4/3;
}
.ba-image { position: absolute; inset: 0; }
.ba-image img, .ba-image .ba-placeholder {
  width: 100%; height: 100%; object-fit: cover; display: block;
}
.ba-before { overflow: hidden; z-index: 2; }
.ba-placeholder {
  background: #e0e8e0; display: flex; align-items: center; justify-content: center;
  color: #888; font-size: 16px; font-weight: 600;
}
.ba-handle {
  position: absolute; top: 0; bottom: 0; z-index: 3;
  display: flex; flex-direction: column; align-items: center;
  transform: translateX(-50%);
  pointer-events: none;
}
.ba-handle-line { flex: 1; width: 3px; background: #fff; box-shadow: 0 0 4px rgba(0,0,0,0.3); }
.ba-handle-circle {
  width: 40px; height: 40px; background: #fff; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.2); color: #2d6a4f;
  flex-shrink: 0;
}
.ba-label {
  position: absolute; bottom: 12px; z-index: 4;
  background: rgba(0,0,0,0.6); color: #fff; padding: 4px 12px;
  border-radius: 4px; font-size: 12px; font-weight: 600; text-transform: uppercase;
  letter-spacing: 0.5px;
}
.ba-label-before { left: 12px; }
.ba-label-after { right: 12px; }
.ba-caption {
  padding: 12px 16px; font-size: 14px; color: #555;
  text-align: center; margin: 0; background: #f7faf7;
}
.ba-cta { text-align: center; margin-top: 32px; }
.ba-cta-btn {
  display: inline-block; padding: 16px 40px; background: #2d6a4f; color: #fff;
  text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 700;
  transition: background 0.2s;
}
.ba-cta-btn:hover { background: #245a42; }
@media (max-width: 600px) {
  .ba-gallery { grid-template-columns: 1fr; }
}
</style>

<script>
(function() {
  document.querySelectorAll('[data-ba-slider]').forEach(function(slider) {
    var before = slider.querySelector('.ba-before');
    var handle = slider.querySelector('.ba-handle');
    var dragging = false;

    function updatePosition(x) {
      var rect = slider.getBoundingClientRect();
      var pct = Math.max(0, Math.min(1, (x - rect.left) / rect.width));
      before.style.width = (pct * 100) + '%';
      handle.style.left = (pct * 100) + '%';
    }

    slider.addEventListener('mousedown', function(e) { dragging = true; updatePosition(e.clientX); });
    document.addEventListener('mousemove', function(e) { if (dragging) { e.preventDefault(); updatePosition(e.clientX); } });
    document.addEventListener('mouseup', function() { dragging = false; });

    slider.addEventListener('touchstart', function(e) { dragging = true; updatePosition(e.touches[0].clientX); }, { passive: true });
    document.addEventListener('touchmove', function(e) { if (dragging) updatePosition(e.touches[0].clientX); }, { passive: true });
    document.addEventListener('touchend', function() { dragging = false; });
  });
})();
</script>

{% schema %}
{
  "name": "Before/After Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "See the Dani Cleans Difference"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Drag the slider to see the transformation. Real results from real customers."
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA button",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0, "max": 100, "step": 4, "unit": "px",
      "label": "Top padding", "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0, "max": 100, "step": 4, "unit": "px",
      "label": "Bottom padding", "default": 52
    }
  ],
  "blocks": [
    {
      "type": "comparison",
      "name": "Before/After",
      "settings": [
        {
          "type": "image_picker",
          "id": "before_image",
          "label": "Before Image"
        },
        {
          "type": "image_picker",
          "id": "after_image",
          "label": "After Image"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Caption",
          "default": "Kitchen Deep Clean — Charlottesville"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Before/After Gallery",
      "blocks": [
        { "type": "comparison", "settings": { "label": "Kitchen Deep Clean — Charlottesville" } },
        { "type": "comparison", "settings": { "label": "Lawn Transformation — Crozet" } },
        { "type": "comparison", "settings": { "label": "Move-Out Cleaning — Albemarle" } }
      ]
    }
  ]
}
{% endschema %}
