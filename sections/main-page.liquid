{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% comment %}
  Smart Page Routing â€” Auto-renders branded page content based on page handle.
  When a page uses the default template (no custom template assigned in admin),
  this detects the page URL and renders the correct custom content automatically.
{% endcomment %}

{%- liquid
  assign known_page = false
  case page.handle
    when 'services'
      assign known_page = true
    when 'about'
      assign known_page = true
    when 'pricing'
      assign known_page = true
    when 'contact-us'
      assign known_page = true
    when 'commercial'
      assign known_page = true
    when 'realtor-partner'
      assign known_page = true
    when 'faq'
      assign known_page = true
    when 'request-a-quote'
      assign known_page = true
    when 'referral'
      assign known_page = true
  endcase

  unless known_page
    if page.handle contains 'cleaning-services-in-'
      assign known_page = true
    endif
  endunless
-%}

{% if known_page %}
  {%- case page.handle -%}
    {%- when 'services' -%}
      {% render 'page-content-services' %}
    {%- when 'about' -%}
      {% render 'page-content-about' %}
    {%- when 'pricing' -%}
      {% render 'page-content-pricing' %}
    {%- when 'contact-us' -%}
      {% render 'page-content-contact-us' %}
    {%- when 'commercial' -%}
      {% render 'page-content-commercial' %}
    {%- when 'realtor-partner' -%}
      {% render 'page-content-realtor-partner' %}
    {%- when 'faq' -%}
      {% render 'page-content-faq' %}
    {%- when 'request-a-quote' -%}
      {% render 'page-content-request-a-quote' %}
    {%- when 'referral' -%}
      {% render 'page-content-referral' %}
    {%- else -%}
      {% if page.handle contains 'cleaning-services-in-' %}
        {% render 'page-content-neighborhood' %}
      {% endif %}
  {%- endcase -%}
{% else %}
  <!-- Default: Branded Page Hero + Admin Content -->
  <div class="dc-page-hero">
    <div class="dc-page-hero-inner">
      <h1 class="dc-page-hero-title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
        {{ page.title | escape }}
      </h1>
    </div>
  </div>

  <div class="page-width page-width--narrow section-{{ section.id }}-padding">
    <div class="dc-page-content rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {{ page.content }}
    </div>
  </div>
{% endif %}

<style>
  .dc-page-hero {
    background: linear-gradient(135deg, #1a3a2a 0%, #2d6a4f 100%);
    padding: 56px 20px;
    text-align: center;
  }
  .dc-page-hero-inner {
    max-width: 800px;
    margin: 0 auto;
  }
  .dc-page-hero-title {
    color: #fff;
    font-size: 36px;
    line-height: 1.2;
    margin: 0;
  }
  .dc-page-content {
    font-size: 16px;
    line-height: 1.7;
    color: #444;
  }
  .dc-page-content h2,
  .dc-page-content h3 {
    color: #1a3a2a;
    margin-top: 2em;
  }
  .dc-page-content a {
    color: #2d6a4f;
    font-weight: 600;
  }
  .dc-page-content ul,
  .dc-page-content ol {
    padding-left: 1.5em;
  }
  .dc-page-content li {
    margin-bottom: 0.5em;
  }
  .dc-page-content img {
    border-radius: 12px;
    margin: 1.5em 0;
  }
  @media (max-width: 768px) {
    .dc-page-hero { padding: 40px 20px; }
    .dc-page-hero-title { font-size: 28px; }
  }
</style>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
